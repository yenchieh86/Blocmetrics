<!DOCTYPE html>
<html>
  <head>
    <title>Blocmetrics</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container-fluid'>
      <div class='head_row'>
        <%= link_to  image_tag( 'http://bsccongress.com/wp-content/uploads/2016/06/white-letter-b-clip-art.png', class: 'logo_sign'), root_path%>
        <nav>
          <% if current_user %>
              <%= link_to 'Edit account', edit_user_registration_path, class: 'btn btn-default' %>
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
          <% else %>
              <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-default' %>
              <%= link_to "sign in", user_session_path, class: 'btn btn-default' %>
          <% end %>
        </nav>
      </div>
      <% if notice %>
        <div class='bg-info'>
          <%= notice %>
        </div>
      <% elsif alert %>
        <div class='bg-danger'>
          <%= alert %>
        </div>
      <% end %>
      
      <div class='row'>
        <%= yield %>
      </div>
    </div>
    </body>
</html>
